<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の詳細</h2>
    <img src="/public/air_photo/<%= data.photo %>" width="300">
  <table>
    <tr><th>項目</th><th>データ</th></tr>
    <tr><th>ID</th><td><%= id %></td></tr>
    <tr><td>マシン名</td><td><%= data.name %></td></tr>
    <tr><td>最高速</td><td><%= data.speed %></td></tr>
    <tr><td>加速</td><td><%= data.acceleration %></td></tr>
    <tr><td>チャージ</td><td><%= data.charge %></td></tr>
    <tr><td>旋回</td><td><%= data.turning %></td></tr>
    <tr><td>グリップ</td><td><%= data.grip %></td></tr>    
    <tr><td>揚力</td><td><%= data.lift %></td></tr>
    <tr><td>飛高速</td><td><%= data.air_speed %></td></tr>
    <tr><td>攻撃力</td><td><%= data.attack %></td></tr>
    <tr><td>耐久力</td><td><%= data.defense %></td></tr>
    <tr><td>重量</td><td><%= data.heavy %></td></tr>
  </table>
  <a href="/air_rider/edit/<%= id %>">編集</a>
  <a href="/air_rider/delete/<%= id %>">削除</a>
  <a href="/air_rider">マシン一覧に戻る</a>
</body>
</html>