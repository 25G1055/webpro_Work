<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の詳細</h2>
  <table>
    <tr><th>項目</th><th>データ</th></tr>
    <tr><th>ID</th><td><%= data.id  %></td></tr>
    <tr><th>コード</th><td><%= data.code %></td></tr>
    <tr><th>ゲーム名</th><td><%= data.name %></td></tr>
    <tr><th>ジャンル</th><td><%= data.category %></td></tr>
    <tr><th>作者</th><td><%= data.author %></td></tr>
    <tr><th>URL</th><td><a href="<%= data.url %>"><%= data.url %></a></td></tr>
  </table>
  <a href="/game/edit/<%= id %>">編集</a>
  <a href="/game/delete/<%= id %>">削除</a>
  <a href="/game">ゲーム一覧に戻る</a>
</body>
</html>